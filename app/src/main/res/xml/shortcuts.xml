<shortcuts
    xmlns:android="http://schemas.android.com/apk/res/android">

    <shortcut
        android:shortcutId="notes"
        android:enabled="true"
        android:icon="@drawable/baseline_notes_36"
        android:shortcutShortLabel="@string/notes_activity"
        android:shortcutLongLabel="@string/notes_activity">

        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.ghostwalker18.schedule.NotesActivity"
            android:targetPackage="com.ghostwalker18.schedule"/>
    </shortcut>

    <shortcut
        android:shortcutId="new_note"
        android:enabled="true"
        android:icon="@drawable/baseline_note_add_36"
        android:shortcutShortLabel="@string/add_note"
        android:shortcutLongLabel="@string/add_note">

        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.ghostwalker18.schedule.EditNoteActivity"
            android:targetPackage="com.ghostwalker18.schedule"/>
    </shortcut>
