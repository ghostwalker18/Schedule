<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        app:key="day"
        app:title="@string/day"
        app:entryValues="@array/widget_day_values"
        app:entries="@array/widget_day_entries"
        app:defaultValue="today"/>

    <ListPreference
        app:key="group"
        app:title="@string/for_group"
        app:defaultValue="last"/>

    <PreferenceCategory
        app:title="@string/appearance">

        <ListPreference
            app:key="theme"
            app:title="@string/option_theme"
            app:entryValues="@array/theme_values"
            app:entries="@array/theme_entries"
            app:defaultValue="system"/>

        <SwitchPreference
            app:key="dynamic_colors"
            app:title="@string/dynamic_colors"
            app:defaultValue="false"/>
    </PreferenceCategory>
</PreferenceScreen>